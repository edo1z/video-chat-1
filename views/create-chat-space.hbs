{{#> layout}}
  <div class="container">
    <h1>Create Chat Space</h1>
    <form action="/chat-spaces/create" method="post">
      <label for="spaceName">Space Name:</label>
      <input type="text" name="name" id="name" required>
      <label class="label-switch" for="isPrivateCheckbox">
        Private:
        <div class="switch">
          <input type="hidden" name="isPrivate" id="isPrivateHidden" value="false">
          <input type="checkbox" id="isPrivateCheckbox" onchange="updateIsPrivate();" type="checkbox">
          <span class="slider"></span>
        </div>
      </label>
      <label for="description">Space Description:</label>
      <textarea name="description" id="description"></textarea>
      <div class="buttons">
        <button type="submit">Create</button>
        <button type="button" onclick="window.location.href='/home';">Cancel</button>
      </div>
    </form>
  </div>
  <script>
    function updateIsPrivate() {
      const isPrivateCheckbox = document.getElementById('isPrivateCheckbox');
      const isPrivateHidden = document.getElementById('isPrivateHidden');
      isPrivateHidden.value = isPrivateCheckbox.checked.toString();
    }
  </script>
{{/layout}}
